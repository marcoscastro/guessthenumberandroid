<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorBackgroundFloating">

    <!--
     Criando um TextView
     Especifico a largura e altura com o tamanho necessário
     apenas para a sua exibição: wrap_content
     Exibição do objeto do tipo string, esse objeto é especificado
     no arquivo strings.xml que está no diretório values
     -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="60px"
        android:layout_marginTop="30px"
        android:text="@string/app_name"
        android:id="@+id/textViewTitle" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40px"
        android:layout_marginTop="30px"
        android:text="@string/message"
        android:id="@+id/textViewMessage" />

    <EditText
        android:layout_width="300px"
        android:layout_height="wrap_content"
        android:inputType="numberSigned"
        android:ems="10"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:id="@+id/editTextNumber" />

    <Button
        android:text="   Check the number   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30px"
        android:onClick="checkNumber"
        android:id="@+id/btnCheck"
        android:background="@android:color/holo_green_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="40px"
        android:layout_marginTop="30px"
        android:text="@string/attempts"
        android:id="@+id/textViewAttempts" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="50px"
        android:layout_marginTop="30px"
        android:id="@+id/textViewTip"
        android:textColor="@android:color/holo_red_dark" />

    <Button
        android:text="   Reset the game   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50px"
        android:onClick="resetGame"
        android:id="@+id/btnReset"
        android:background="@android:color/holo_red_light"  />

</LinearLayout>